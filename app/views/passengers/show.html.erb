<h1>Information for <%= @passenger.name %></h1>

<h3>Flights taken:</h3>
  <% @passenger.flights.each do |flight| %>
    <ul>
      <li>Flight: <%= link_to flight.number, flight_path(flight) %></li>
    </ul>
  <% end %>

  <h3>Add Flight:</h3>
  <%= form_tag "/passengers/#{@passenger.id}/flights", method: :post do %>
    <%= label_tag 'Flight Number:' %>
    <%= number_field_tag :flight_number %>
    <%= submit_tag 'Submit' %>
  <% end %>
